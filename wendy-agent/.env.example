# Twitter API Credentials
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_HANDLE=your_twitter_handle
BEARER_TOKEN=your_bearer_token

# GAME Framework API Key
# This key is used for Twitter integration through the Virtuals proxy API
GAME_API_KEY=your_game_api_key

# Anthropic LLM Settings
ANTHROPIC_API_KEY=your_anthropic_api_key
LLM_MODEL=claude-3-opus-20240229

# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Environment Settings
NODE_ENV=development
PORT=3000

# Worker Interval Settings (in seconds)
# Based on GAME Protocol rate limits: 29 calls per 5 minutes for main worker
MAIN_WORKER_INTERVAL_SECONDS=12   # Default: 12 seconds (allows ~5 calls/minute)
DM_SCAN_INTERVAL_SECONDS=300      # Default: 5 minutes (300 seconds)
DM_RESPOND_INTERVAL_SECONDS=60    # Default: 1 minute (60 seconds) 